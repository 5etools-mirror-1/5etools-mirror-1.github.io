{
  // code formatting section
  "eslint.format.enable": true,
  "editor.formatOnSave": false,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true
  },

  // json schema section, see:
  // https://code.visualstudio.com/Docs/languages/json#_json-schemas-and-settings
  "json.schemas": [
    {
      "fileMatch": [
        "data/**/*.json" // apply this schema to any .json files inside the data directory
      ],
      "url": "./test/schema-template/homebrew.json"
    }
  ],

  // file nesting section, which allows files to be grouped into visual files, see:
  // https://code.visualstudio.com/updates/v1_64#_explorer-file-nesting
  // if this bugs you and you want to close them, you can alt click on a folder to minimize all its subfolders
  "explorer.experimental.fileNesting.enabled": true,
  "explorer.experimental.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    "index.html": "*.html",
    "README.md": "*.md",
    "*.json": "fluff-${capture}.json, foundry-${capture}.json, roll20-${capture}.json",
    "apple-touch-icon-360x360.png": "*.png",
    "filter.js": "filter*.js",
    "converter.js": "converter*.js",
    "dmscreen.js": "dmscreen*.js",
    "render.js": "render*.js"
  },
}